<section id="services" class="services">
  <div class="container">
    <h2 class="section-title text-center">Coaching Options</h2>
    <p class="services-intro text-center">Choose the support that fits your lifestyle and goals</p>
    
    <div class="services-grid">
      {services.map(service => (
        <div class="service-card">
          <div class="service-icon">{service.icon}</div>
